.persistentObjectDraggableEditPane {
  border-bottom-left-radius: 3px;
  border-bottom-right-radius: 3px;
}

.persistentObjectDraggableEditPane,
.persistentObjectDraggableEditPane .persistentObjectDraggableEditPane-heading {
  border-top-left-radius: 3px;
  border-top-right-radius: 3px;
}

.persistentObjectDraggableEditPane .persistentObjectDraggableEditPane-heading {
  background-image: -webkit-gradient(linear, left top, left bottom, from(#b0bccd), to(#6d84a2), color-stop(0.5, #889bb3), color-stop(0.5, #8195af));
  /*border-top: 1px solid #cdd5df;*/
  border-top-style: none;
  border-bottom: 1px solid #2d3642;
  color: white;
  text-shadow: rgba(0, 0, 0, 0.6) 0 -1px 0;
  height: 33px;
  padding: 0;
}

.persistentObjectDraggableEditPane .persistentObjectDraggableEditPane-heading .persistentObjectButtonEditPane-buttons {
  position: absolute;
  top: 0;
  right: 0;
  z-index: 2;
}

.dj_gecko .persistentObjectDraggableEditPane .persistentObjectDraggableEditPane-heading {
  background-image: -moz-linear-gradient(center top , #B0BCCD 0%, #889BB3 50%, #8195AF 50%, #6D84A2 100%);
}

